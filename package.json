{
  "name": "@splytech-io/request-id",
  "version": "2.1.7",
  "description": "Track requests using request-id header between microservices",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test": "nyc mocha --require ts-node/register 'src/**/*.spec.ts'",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "track",
    "header",
    "microservice",
    "request",
    "request-id",
    "id"
  ],
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "dependencies": {
    "@splytech-io/utils": "^3.6.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/koa": "^2.0.48",
    "@types/mocha": "^5.2.7",
    "@types/node": "^9.6.49",
    "@types/sinon": "^4.3.3",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "koa": "^2.7.0",
    "mocha": "^5.2.0",
    "nyc": "^11.9.0",
    "sinon": "^4.4.8",
    "supertest": "^3.4.2",
    "ts-node": "^6.2.0",
    "tslint": "^5.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^2.9.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ]
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-request-id.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-request-id/issues"
  },
  "homepage": "https://github.com/splytech-io/node-request-id#readme"
}
